{
  "name": "sih-erp-system-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "ERP System - Express + Next monorepo",
  "scripts": {
    "dev": "concurrently \"npm:dev:next\" \"npm:dev:api\"",
    "dev:next": "cd frontend && npm run dev",
    "dev:api": "node src/server/index.js",
    "build": "cd frontend && npm run build",
    "start": "concurrently \"npm:start:next\" \"npm:start:api\"",
    "start:next": "cd frontend && npm start -p 3000",
    "start:api": "node src/server/index.js"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "body-parser": "^1.20.3"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=8.0.0"
  }
}
